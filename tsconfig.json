{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "typeRoots": ["./types"],
    "rootDir": "./src",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  }
}
